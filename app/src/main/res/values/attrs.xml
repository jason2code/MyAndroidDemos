<resources>
    <!--format是值该属性的取值类型:一共有：string,color,demension,integer,enum,reference,float,boolean,fraction,flag;-->
    <!--format="reference|color" 的意思就是，既可以是引用的资源reference：参考指定Theme中资源ID。，比如图片，也可以是颜色值-->

    <!--flag：位或运算-->
    <!--<attr name="windowSoftInputMode">-->
        <!--<flag name="stateUnspecified" value="1" />-->
        <!--<flag name = "adjustNothing" value = "0x30" />-->
    <!--</attr>-->
    <!--使用:<activity android:windowSoftInputMode="stateUnspecified | adjustNothing">-->


    <!--enum 枚举 <attr name="language"><enum name="English" value="1"/></attr>-->

    <declare-styleable name="TopBar">
        <attr name="titleText" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="titleTextSize" format="dimension" />

        <attr name="leftText" format="string" />
        <attr name="leftBackgroud" format="color|reference" />
        <attr name="leftTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="wheelview">
        <attr name="default_textsize" format="dimension" />
        <attr name="default_textcolor" format="color" />
        <attr name="center_textcolor" format="color" />
        <attr name="center_textsize" format="dimension" />
    </declare-styleable>

</resources>
