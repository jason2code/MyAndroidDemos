<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".launchMode.LmFirstActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="jumpSecWithSingleTask"
        android:text="LmThree:singleTask方式跳转到LmSecActivity"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="jumpThreeWithSingleTop"
        android:text="LmThree:singleTop方式跳转到LmThreeActivity"
        android:textAllCaps="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="jumpThreeWithStandard"
        android:text="LmThree:standard方式跳转到LmThreeActivity"
        android:textAllCaps="false" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="jumpSingleInstance"
        android:text="LmThree:跳转到SingleInstanceActivity"
        android:textAllCaps="false" />

</LinearLayout>
